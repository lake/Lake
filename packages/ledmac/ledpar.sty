  \ifnum\@l@dtempcnta=\@l@dtempcntb
 \if@twocolumn
    \if@firstcolumn
      \gdef\l@dld@ta{\llap{{\leftlinenumR}}}%
    \else
      \gdef\l@drd@ta{\rlap{{\rightlinenumR}}}%
    \fi
 \else
